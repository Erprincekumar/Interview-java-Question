import java.util.Scanner;
class Pattern9 
{
	public static void main(String[] args) 
	{
		Scanner sc=new Scanner(System.in);
		int  n,i,j;
         System.out.println("Enter a no:");
		 n=sc.nextInt();
		 for(i=1=1;i<=n;i++)
		{
           for(j=1;j<=n;j++)
			{
               if(i==j||i+j==n+1)
				   System.out.print("#");
			   else
				   System.out.print(".");
			}
			System.out.println();
		}
		//System.out.println("Hello World!");
	}
}
